  <div class="container">
    <h1>{{titulo}}</h1>
    <p>&nbsp;</p>
    <div class="row">
     <form class="form-horizontal" method="POST" action="/unidades/trasconfirm" >
       <div class="form-group">
         <label for="fecha" class="col-sm-2 control-label">Fecha</label>
         <div class="col-sm-2">
           <input type="text" class="form-control text-center" id="fecha" name="fecha" value="{{ datos.fecha }}" readonly>
         </div>
       </div>
       <div class="form-group">
         <label for="marca" class="col-sm-2 control-label">Unidad</label>
         <div class="col-sm-10">
           <p class="form-control-static">{{ datos.unidad.marca }} / {{datos.unidad.modelo}} / {{ datos.unidad.anio}} / {{datos.unidad.nro_motor}} / {{datos.unidad.matricula}}</p>
           <input type="hidden" name="id" value="{{datos.unidad.id_unidad}}">
         </div>
       </div>
       <div class="form-group">
         <label for="origen" class="col-sm-2 control-label">Origen</label>
         <div class="col-sm-4">
           <input type="text" class="form-control" id="origen" name="origen" value="{{ datos.suc.nombre }}" >
         </div>
       </div>
       <div class="form-group">
         <label for="destino" class="col-sm-2 control-label">Destino</label>
         <div class="col-sm-4">
           <select class="form-control" id="destino" name="destino">
             {{# each datos.sucursales}}
             <option value="{{ id_sucursal }}">{{ nombre }}</option>
             {{/each}}
          </select>
         </div>
       </div>

       <input type="submit" class="btn btn-default" value="Guardar">
     </form>
    </div>
  </div>
