<div class="row">
<div class="col col-sm-12">
<form class="form-inline">
      <div class="form-group">
      <label for="busquedau">Buscar</label>
      <input type="text" class="form-control" id="busquedau" name="busquedau">
    </div>

    <div class="form-group">
      <label for="criterio">Criterio de búsqueda</label>
        <select class="form-control" id="criterio" name="criterio" onchange="mostrar()">
          <option value="marca">Marca</option>
          <option value="sucursal">Sucursal</option>
          <option value="nro_motor">Nro.Motor</option>
          <option value="nro_chasis">Nro.Chasis</option>
          <option value="matricula">Matrícula</option>
          <option value="anio">Año</option>
        </select>
        <label for="estado">Estado de unidad</label>
        <select class="form-control" name="estado" id="estado">
          <option value="1">Todos</option>
          <option value="2">Cero KM</option>
          <option value="3">Usados</option>
        </select>
        
        <div class="oculto" id="oculto">
          <select name="sucursales" id="sucursales" class="form-control" onchange="cambiarTexto()">
          {{#each datos.sucursales}}
            <option value="{{ id_sucursal}}">{{ nombre }}</option>
          {{/each}}
        </select>
        </div>

      </div>
      <input type="button" id="find-unidad" value="Buscar" class="btn btn-default">
</form>
</div>

</div>

<p>&nbsp;</p>
<div id="resultado">

</div>
